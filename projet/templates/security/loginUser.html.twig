

{% block body %}
    <h2>Veuillez vous identifier Dresseur !</h2>

        <form id="id_form" action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <label for="name"><b>Nom</b></label>
                <br>
                <input type="text" placeholder="Entrez votre Nom" name="_username" required>
                <br>


                <label for="pwd"><b>Mot de Passe</b></label><br>
                <input type="password" placeholder="Mot de Passe" name="_password" required>
                <br><br>

                <button type="submit" class="btn btn-success">Connexion</button>
            </div>

        </form>

{% endblock %}